<form method="post" action="/ballots/">
<h2>Ballot 2020</h2>


<% @voter.ballot.proposals.each do|proposal| %>

<h3><%=proposal.name%></h3>
<br>

<p><%=proposal.details%></p>
<br>

<input type="radio" id="yes" name="proposal_name[<%=proposal.name%>]" value="true">
<label for="yes">Yes</label>
<input type="radio" id="no" name="proposal_name[<%=proposal.name%>]" value="false">
<label for="no">No</label>

<%end%>

<br>
<input type="submit" value="Submit">
</form>